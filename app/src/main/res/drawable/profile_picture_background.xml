<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow or outer layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFECECEC" /> <!-- Light gray background -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Inner layer for border -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FF2196F3" /> <!-- Border color (blue) -->
            <solid android:color="#FFFFFFFF" /> <!-- White inner fill -->
        </shape>
    </item>
</layer-list>
