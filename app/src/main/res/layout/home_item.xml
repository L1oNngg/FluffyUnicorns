<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="351dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/frame_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageHotel1"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_outline"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/room_main_01" />

        <TextView
            android:id="@+id/tvRoomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="1000"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/tvRoomName" />

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:fontFamily="@font/montserrat_bold"
            android:lineHeight="24dp"
            android:maxLines="2"
            android:text="Double superior king bed"
            android:textColor="@color/text_black"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/imageHotel1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bookbtn" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"
            app:srcCompat="@drawable/viewbtn" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageHotel1"
            app:layout_constraintTop_toBottomOf="@+id/tvRoomName"
            app:srcCompat="@drawable/ic_dola" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvRoomPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvRoomName"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/tvRoomCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="8dp"
            android:text="4"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/tvRoomName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>