<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookingActivity">

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/myBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="imageView10" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/room_main_03" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Description"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:srcCompat="@drawable/ic_hotel" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Type room"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeRoom"
        app:srcCompat="@drawable/ic_money" />

    <TextView
        android:id="@+id/typeRoom"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="right"
        android:text="Double superior king bed"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Base price per night"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/typeRoom" />

    <TextView
        android:id="@+id/pricePerNight"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="right"
        android:text="$1000"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeRoom" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricePerNight"
        app:srcCompat="@drawable/ic_adult" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Max Occupancy"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/pricePerNight" />

    <TextView
        android:id="@+id/maxOccupancy"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="right"
        android:text="4"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricePerNight" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxOccupancy"
        app:srcCompat="@drawable/ic_ruler" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Area"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/maxOccupancy" />

    <TextView
        android:id="@+id/Area"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:gravity="right"
        android:text="26.0 m2"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxOccupancy" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Amenities"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/text_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Area" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="409dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                app:srcCompat="@drawable/amenity_wi_fi"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                app:srcCompat="@drawable/amenity_bathtub"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                app:srcCompat="@drawable/amenity_fridge"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="409dp"
                android:layout_height="75dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginEnd="30dp"
                app:srcCompat="@drawable/amenity_hot_tub"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/bookBtn"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginbtn_background"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="59dp"
        android:paddingTop="5dp"
        android:paddingRight="59dp"
        android:paddingBottom="5dp"
        android:text="Book Now"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="351dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/room_05"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/room_06"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/room_07"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/room_08"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="581dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/textView5"
        android:layout_width="351dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_20px"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10">

        <TextView
            android:layout_width="225dp"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Double superior king bed"
            android:textColor="@color/text_white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="106dp"
            android:layout_height="57dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="106dp"
                android:layout_height="32dp"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="$1000"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="25dp"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="5sp"
                android:text="night"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>